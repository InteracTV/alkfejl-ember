{{log error}}
<form class="form-horizontal" method="post" data-toggle="validator">
    <fieldset>
        <div class="form-group {{if tasks.location "has-error"}}">
            <label for="helyszin" class="col-lg-2 control-label">Helyszín</label>
            <div class="col-lg-10">
                <input required class="form-control" id="helyszin" name="helyszin" type="text" value="{{error.location}}">
                <div class="help-block">{{tasks.location}}</div>
            </div>
        </div>
        <div class="form-group {{if tasks.description "has-error"}}">
            <label for="leiras" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea required class="form-control" rows="3" id="leiras" name="leiras">{{task.description}}</textarea>
                <div class="help-block">{{tasks.description}}</div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Mégse</button>
                <button {{action "submit"}} class="btn btn-primary">Mentés</button>
            </div>
        </div>
    </fieldset>
</form>        